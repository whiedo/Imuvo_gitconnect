<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:theme="@style/ImuvoTheme"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rectangle_dialog"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <com.example.sco.imuvo.CustomViews.TextViewITCKRIST
            android:text="@string/vocabWrong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/textView"
            android:gravity="center_horizontal"
            android:textAppearance="@style/TextAppearance.AppCompat"
            android:textSize="18sp"
            android:layout_marginBottom="20dp"/>

        <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

            <com.example.sco.imuvo.CustomViews.ButtonJokerman
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@id/solution"
                android:text="@string/showSolution"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:textSize="14sp"
                android:background="@drawable/button_menu"
                />

            <com.example.sco.imuvo.CustomViews.ButtonJokerman
                android:layout_width="0dp"
                android:layout_height="100dp"
                android:id="@id/repeat"
                android:text="@string/tryAgain"
                android:layout_weight="1"
                android:background="@drawable/button_menu"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
